params.run_type='local'

docker.enabled = true
process {
  withName:tx2gene { 
      cpus=1
      container = 'mpgagebioinformatics/rnaseq.python:3.8-1'
      containerOptions = "-v ${params.project_folder}:/workdir"
  }
  withName:annotations { 
    cpus=1
    container = 'mpgagebioinformatics/rnaseq.python:3.8-1'
    containerOptions = "-v ${params.project_folder}:/workdir"
  }
  withName:parse_submission { 
    cpus=1
    container = 'mpgagebioinformatics/rnaseq.python:3.8-1'
    containerOptions = "-v ${params.project_folder}:/workdir"
  }
}