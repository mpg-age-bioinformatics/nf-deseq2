singularity.enabled = true
process {
    withName:tx2gene {
        executor='slurm'
        queue="${params.queue}"
        cpus=2
        mem='8 GB'
        time='1h'
        jobName={ "$task.name" }
        container = "${params.image_folder}deseq2-1.38.0.sif"
        containerOptions = "-B ${params.project_folder}:/workdir"
    }
    withName:deseq2 {
        executor='slurm'
        queue="${params.queue}"
        cpus=8
        mem='20 GB'
        time='1h'
        jobName={ "$task.name" }
        container = "${params.image_folder}deseq2-1.38.0.sif"
        containerOptions = "-B ${params.project_folder}:/workdir"
    }
    withName:mastertable {
        executor='slurm'
        queue="${params.queue}"
        cpus=8
        mem='40 GB'
        time='4h'
        jobName={ "$task.name" }
        container = "${params.image_folder}deseq2-1.38.0.sif"
        containerOptions = "-B ${params.project_folder}:/workdir"
    }
}

